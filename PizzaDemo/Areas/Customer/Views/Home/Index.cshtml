@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px">
                    <div class="card h-100">
                        <div class="image-container">
                            <img src="@product.ImageUrl" class="card-img-top">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="p-1">
                                <p class="card-title h5 text-primary">@product.Name</p>
                            </div>
                            <div class="p-1">
                                <p>價格：<b>$@product.Price.ToString("0.00")</b></p>
                            </div>
                            <div class="mt-auto">
                                <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .image-container {
            height: 300px; /* 固定高度 */
            overflow: hidden;
            position: relative;
        }

        .card-img-top {
            width: 100%;
            height: 100%;
            object-fit: cover; /* 保持圖片比例並填滿容器 */
            object-position: center;
        }

        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        /* 確保所有卡片有相同的邊距 */
        .col-12.p-1 {
            height: 100%;
        }

        /* 確保價格和標題的高度一致 */
        .card-title {
            min-height: 2.5rem; /* 可以根據需要調整 */
            margin-bottom: 0.5rem;
        }

        /* 按鈕固定在底部 */
        .mt-auto {
            margin-top: auto;
        }
    </style>
}